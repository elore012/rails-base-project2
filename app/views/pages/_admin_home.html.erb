<h2>Admin</h2>


<div class="d-flex bd-highlight mb-3">

  <div class="ml-auto p-2 bd-highlight">
   <%= render 'pages/new_user' %>
  </div>

</div>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Email</th>
      <th scope="col">id</th>
      <th scope="col">Status</th>
      <th scope="col">approval</th>
    </tr>
  </thead>
  <tbody>
  <% @tracked_user.each do |user| %>
    <% unless user.admin %>
    <tr>
      <th scope="row"><%= user.email %></th>
      <th scope="row"><%= user.id %></th>
      <td><%= user.status %></td>
      <td>
      <% if user.status == false %>
      <!-- 
      use button
      -->
        
        <%= link_to user.status, pending_path(user), method: :get, class: "btn btn-outline-warning" %>
      

      

      <% else %>
        <span>Approved</span>
      <% end %>

      </td>
    </tr>
    <% end %>

  <% end %>
  </tbody>
</table>
