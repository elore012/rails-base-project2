

<div class="row">
<div class="col-9">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Ticker</th>
        <th scope="col">Company</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @sold_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.company %></td>
        <td><%= stock.price %></td>
    
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
