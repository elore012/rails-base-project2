<% unless @sold_stock_records.empty? %>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Ticker</th>
            <th scope="col">Company</th>
            <th scope="col">Price</th>
            <th scope="col">Date of Sell</th>
          </tr>
        </thead>
        <tbody>
        <% @sold_stock_records.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.ticker %></th>
            <td><%= stock.company %></td>
            <td><%= '%.2f' % stock.price %></td>
            <td><%= stock.created_at.strftime("%d of %B, %Y") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <h3 class = "text-center">No record to display</h3>
<% end %>

