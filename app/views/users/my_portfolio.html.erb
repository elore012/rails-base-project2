<h1>My Portfolio</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <%= render 'users/search_stock' %>

      <%= render 'users/result' %>
      
      <% if @user_status %>
        <%= render 'users/stock_table' %>
      <% else %>
        <h3 class = "text-center">Adding Stock will be available once admin approve it</h3> 
      <% end %>

    </div>
    
    <div class="col-sm-4">
      <%= render 'users/current_balance' %>
    </div>
  </div>
</div>









